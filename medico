package ME2024POO;

import java.util.ArrayList;
public class medico extends pessoa {
    private String crm;
    private ArrayList<disponibilidade> disponibilidades = new ArrayList<>();
    private especialidadeMedica especialidade;
	
	
    public medico(String nome, String telefone, String email, String crm, especialidadeMedica especialidade) {
        super(nome, telefone, email);
        this.crm = crm;
        this.especialidade = especialidade;
    }
	  
    
    
    public void adicionarDisponibilidade(String diaSemana, String horarioInicio, String horarioFim) {
        disponibilidade novaDisponibilidade = new disponibilidade(diaSemana, horarioInicio, horarioFim);
        this.disponibilidades.add(novaDisponibilidade);
    }

	
	 void alteraDisponibilidade(disponibilidades disponibilidadeParaAlterar) {
	        for (disponibilidades disp : disponibilidades) {
	            if (disp.equals(disponibilidadeParaAlterar)) {
	                disp.ativo = !disp.ativo;
	                break; 
	            }
}	

}
}
